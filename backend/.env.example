# ─── DATABASE CONFIG ────────────────────────────────────────────────
DATABASE_URL=postgres://postgres:postgres@localhost:5432/resto?sslmode=disable

# ─── SECURITY ───────────────────────────────────────────────────────
# Change this to a long random string in production!
JWT_SECRET=super-strong-random-secret-key-please-change

# ─── FRONTEND / BACKEND URLs ────────────────────────────────────────
FRONTEND_URL=http://localhost:3000
ALLOW_ORIGIN=http://localhost:3000

# ─── ENVIRONMENT SETTINGS ───────────────────────────────────────────
ENV=development
ALLOW_INSECURE_COOKIES=1          # set to 0 in production
IMG_ROOT=./frontend/public        # where uploaded images are stored

# ─── SMTP EMAIL SETTINGS (OPTIONAL) ─────────────────────────────────
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASS=verysecret
SMTP_FROM=notifications@example.com

# ─── TWILIO (OPTIONAL) ──────────────────────────────────────────────
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=

# ─── AWS (OPTIONAL - for S3 media export) ───────────────────────────
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=

# ─── FRONTEND BUILD VARIABLES (React automatically exposes these) ───
REACT_APP_API_URL=http://localhost:8080/api
REACT_APP_DEFAULT_RESTAURANT=1

